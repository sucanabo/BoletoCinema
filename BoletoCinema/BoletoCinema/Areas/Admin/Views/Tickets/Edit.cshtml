                <label asp-for="order_id" class="control-label"></label>
                <select asp-for="order_id" class="form-control" asp-items="ViewBag.order_id"></select>
                <span asp-validation-for="order_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="schedule_id" class="control-label"></label>
                <select asp-for="schedule_id" class="form-control" asp-items="ViewBag.schedule_id"></select>
                <span asp-validation-for="schedule_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="price" class="control-label"></label>
                <input asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
